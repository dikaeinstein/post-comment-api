  "license": "MIT",
  "scripts": {
    "build": "babel src -d dist",
    "clean": "rm -rf dist",
    "debug": "babel-node --inspect-brk src/bin/www.js",
    "dev": "babel-node src/bin/www.js",
    "lint": "eslint src/**/*.js",
    "prebuild": "yarn clean",
    "start": "node dist/bin/www.js",
    "test": "jest --runInBand --coverage",
    "cucumber": "cucumber-js",
    "test:cucumber": "NODE_ENV=test cucumber-js --require-module @babel/register",
    "test:coveralls": "jest --runInBand --coverage --coverageReporters=text-lcov | coveralls",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand --no-cache",
    "test:integration": "jest --coverage --runInBand --detectOpenHandles -c jest.config.integration.js",
    "test:unit": "jest --coverage --detectOpenHandles -c jest.config.unit.js",
    "test:integration:watch": "yarn test:integration --watchAll",
    "test:unit:watch": "yarn test:unit --watchAll",
    "watch": "nodemon"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-plugin-module-resolver": "^3.2.0",
    "coveralls": "^3.0.4",
    "cucumber": "^5.1.0",
    "eslint": "^6.0.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "faker": "^4.1.0",
    "jest": "^24.8.0",
    "jest-extended": "^0.11.1",
    "jest-in-case": "^1.0.2",
    "joi": "^14.3.1",
    "nodemon": "^1.19.1",
    "pino-pretty": "^3.2.0",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "@hapi/joi": "^15.0.3",
    "cuid": "^2.1.6",
    "dotenv": "^8.0.0",
    "http-status-codes": "^1.3.2",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^4.2.0",
    "koa-response-time": "^2.1.0",
    "koa-router": "^7.4.0",
    "mongoose": "^5.6.0",
    "pino": "^5.12.6"
  }
}
